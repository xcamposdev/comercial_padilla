<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_sale_custom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.custom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="26"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']/h2[4]" position="before">
                <h2>Movimientos de Inventario</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Este valor por defecto es aplicado a todas las ventas que se realizen. Esto puede ser modificado en la vista otra informaciÃ³n de la venta.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="x_warehouse_id"/>
                            <div class="text-muted">
                                Almacen por defecto
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="x_warehouse_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
