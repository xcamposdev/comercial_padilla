<?xml version="1.0" ?>

<odoo>
    <record id="account_move_form_discount_form_view" model="ir.ui.view">
        <field name="name">account.move.form.discount.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="x_discount_global" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
            </xpath>
        </field>
    </record>
</odoo>
