<odoo>
    <data>
        <record id="product_template_filter_search_view_custom" model="ir.ui.view">
            <field name="name">product.template.filter.search.view.custom</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="before">
                    <field name="x_product_default_code" filter_domain="[('x_manufacturer_code', '=', self)]" string="Por Referencia Fabricante" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>